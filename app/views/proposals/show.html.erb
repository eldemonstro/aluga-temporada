<h1>Sua proposta para <%= link_to @proposal.property.title, @proposal.property %></h1>
<hr>
<dl>
  <dt>Data de início</dt> <dd><%= l @proposal.start_date %></dd>
  <dt>Data de fim</dt> <dd><%= l @proposal.end_date %></dd>
  <dt>Quantidade de pessoas</dt> <dd><%= @proposal.total_guests %></dd>
  <dt>Propósito da locação</dt> <dd><%= @proposal.purpose %></dd>
  <dt>Valor total</dt> <dd><%= number_to_currency(@proposal.total_amount) %></dd>
</dl>
