<h1>Enviar uma proposta para <%= @property.title %></h1>

<% if @proposal.errors.any? %>
  <% @proposal.errors.full_messages.each do |message| %>
    <div class="alert alert-danger">
      <%= message %>
    </div>
  <% end %>
<% end %>


<%= form_for([@property, @proposal]) do |f| %>
  <legend>Formul√°rio para enviar uma proposta</legend>
  <div class="form-group">
    <%= f.label :user_name %>
    <%= f.text_field :user_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :total_guests %>
    <%= f.text_field :total_guests, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :purpose %>
    <%= f.text_area :purpose, class: 'form-control' %>
  </div>
  <div class="form-check">
    <%= f.label :agree_with_rules do %>
      <%= f.check_box :agree_with_rules %>
      <%= t 'activerecord.attributes.proposal.agree_with_rules' %>
    <% end %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
